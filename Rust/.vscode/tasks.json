{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo ${input:echoPrompt}",
            // "group": {
            //     "kind": "build",
            //     "isDefault": true
            // },
        },
        {
            "label": "cargo run",
            "type": "shell",
            "command": "cargo run",
            "options": {
                "cwd": "${fileDirname}/.."
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Cargo tasks",
            "type": "shell",
            "command": "cargo ${input:cargoOpt}",
            "options": {
                "cwd": "${fileDirname}/.."
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
        }
    ],
    "inputs": [
        {
            "id": "echoPrompt",
            "description": "Please enter a value",
            "default": "default text",
            "type": "pickString",
            "options": ["hello", "bye"]
        },
        {
            "id": "cargoOpt",
            "description": "Please select a cargo task.",
            "default": "check",
            "type": "pickString",
            "options": ["check","run","build"]
        }

    ]
}